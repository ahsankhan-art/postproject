<p id="notice"><%= notice %></p>
<%if user_signed_in?%>
<h1>Posts</h1>

<table class="table">
  <thead>
    <tr>
      <th class="col">Title</th>
      <th class="col">Description</th>
      <th class="col">Likes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><b><%= post.post %></b></td>
        <td><%= post.description %></td>
        <td><%= post.likes.count %> <%= (post.likes.count) == 1 ? 'Like' : 'Likes'%></td>
        <td><%= link_to 'Like', likes_path(post_id: post.id), method: :post %></td>
        <% if post.created_by==current_user.id.to_s%>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path,{:style=>'color:white;', :class => "btn btn-primary"} %>
<%else%>
  <h1>Welcome to our site please Login to continue</h1>
  <%= link_to 'Login', new_user_session_path,{:style=>'color:white;', :class => "btn btn-primary"} %>
<%end%>