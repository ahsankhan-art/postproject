<p id="notice"><%= notice %></p>
<%if user_signed_in?%>
<h1>My Posts</h1>

<table class="table">
  <thead>
    <tr>
      <th class="col">Title</th>
      <th class="col">Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
     <% if post.created_by==current_user.id.to_s %>
      <tr>
        <td><%= post.post %></td>
        <td><%= post.description %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
     <% end %>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'New Post', new_post_path,{:style=>'color:white;', :class => "btn btn-primary"} %>
<%else%>
  <h1>Welcome to our site please Login to continue</h1>
  <%= link_to 'Login', new_user_session_path,{:style=>'color:white;', :class => "btn btn-primary"} %>
<%end%>

<%= link_to 'Back To All posts', posts_path,{:style=>'color:white;', :class => "btn btn-primary"} %>